@model NotikaIdentityEmail.Models.ActivationViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>Aktivasyon Kodu</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="/Login_v4/vendor/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="/Login_v4/css/main.css">
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-5">

                <form method="post">

                    <span class="login100-form-title mb-4">
                        E-Posta Doğrulama
                    </span>

                    <!-- EMAIL -->
                    <div class="wrap-input100 mb-3">
                        <input asp-for="Email"
                               class="input100"
                               placeholder="E-posta adresiniz" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- CODE -->
                    <div class="wrap-input100 mb-3">
                        <input asp-for="Code"
                               class="input100"
                               placeholder="Aktivasyon kodu" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>

                    <!-- GLOBAL ERRORS -->
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <button type="submit" class="login100-form-btn">
                        Hesabı Aktif Et
                    </button>

                </form>

            </div>
        </div>
    </div>

    <script src="/Login_v4/vendor/jquery/jquery-3.2.1.min.js"></script>
    <script src="/Login_v4/vendor/bootstrap/js/bootstrap.min.js"></script>
</body>
</html>
