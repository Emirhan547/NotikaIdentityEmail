@using NotikaIdentityEmail.Areas.Admin.Models
@model DashboardViewModel

@{
    ViewData["Title"] = "Yönetim Paneli";
    var readRate = Model.MessageCount > 0
        ? (int)Math.Round((1 - (double)Model.UnreadMessageCount / Model.MessageCount) * 100)
        : 0;
    var draftRate = Model.MessageCount > 0
        ? (int)Math.Round(((double)Model.DraftCount / Model.MessageCount) * 100)
        : 0;
    var unreadRate = Model.MessageCount > 0
        ? (int)Math.Round(((double)Model.UnreadMessageCount / Model.MessageCount) * 100)
        : 0;
    var commentRate = Model.CommentCount > 100 ? 100 : Model.CommentCount;
}

<div class="space-y-8">
    <!-- Başlık ve Kontroller -->
    <div class="flex flex-col gap-6 lg:flex-row lg:items-center lg:justify-between">
        <div>
            <div class="inline-flex items-center gap-2 rounded-full bg-primary/10 px-3 py-1 text-xs font-semibold text-primary">
                <span class="material-symbols-outlined text-base">dashboard</span>
                Gerçek Zamanlı Yönetim Paneli
            </div>
            <h2 class="mt-3 text-3xl font-bold text-gray-900">Yönetim Paneli Genel Bakış</h2>
            <p class="text-gray-500 text-sm mt-2 max-w-2xl">Sistem istatistikleriniz, mesaj performansınız ve platform sağlığınız aşağıda özetlenmiştir.</p>
        </div>
        <div class="flex flex-wrap gap-3">
            <button class="px-4 py-2 bg-white border border-gray-200 text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-50 transition-colors flex items-center gap-2" type="button">
                <span class="material-symbols-outlined text-lg">calendar_today</span>
                Son 24 Saat
            </button>
            <button class="px-4 py-2 bg-primary text-white rounded-lg text-sm font-medium hover:bg-primary/90 transition-colors flex items-center gap-2" type="button">
                <span class="material-symbols-outlined text-lg">download</span>
                Raporu İndir
            </button>
            @if (Model.KibanaEnabled)
            {
                <a href="@Model.KibanaUrl" target="_blank" class="px-4 py-2 bg-gray-900 text-white rounded-lg text-sm font-medium hover:bg-gray-800 transition-colors flex items-center gap-2">
                    <span class="material-symbols-outlined text-lg">monitoring</span>
                    Kibana Canlı Görünüm
                </a>
            }
        </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <!-- Kullanıcı Kartı -->
        <div class="rounded-xl bg-gradient-to-br from-indigo-500 to-indigo-600 text-white p-6 shadow-lg">
            <div class="flex items-center justify-between">
                <div class="p-3 bg-white/20 rounded-lg">
                    <span class="material-symbols-outlined text-2xl">group</span>
                </div>
                <span class="text-xs font-semibold bg-white/20 px-2 py-1 rounded-full">+%12</span>
            </div>
            <p class="text-sm opacity-90 mt-4">Toplam Kullanıcı</p>
            <h3 class="text-3xl font-bold mt-1">@Model.UserCount</h3>
            <p class="text-xs opacity-75 mt-2">Sistemdeki aktif hesaplar</p>
        </div>

        <!-- Mesaj Kartı -->
        <div class="rounded-xl bg-gradient-to-br from-blue-500 to-cyan-500 text-white p-6 shadow-lg">
            <div class="flex items-center justify-between">
                <div class="p-3 bg-white/20 rounded-lg">
                    <span class="material-symbols-outlined text-2xl">mail</span>
                </div>
                <span class="text-xs font-semibold bg-white/20 px-2 py-1 rounded-full">+%5</span>
            </div>
            <p class="text-sm opacity-90 mt-4">Toplam Mesaj</p>
            <h3 class="text-3xl font-bold mt-1">@Model.MessageCount</h3>
            <div class="mt-3">
                <div class="flex justify-between text-xs mb-1">
                    <span>@Model.UnreadMessageCount okunmamış</span>
                    <span>%@readRate okunma oranı</span>
                </div>
                <div class="h-1.5 bg-white/30 rounded-full overflow-hidden">
                    <div class="h-full bg-white" style="width: @readRate%"></div>
                </div>
            </div>
        </div>

        <!-- Taslak & Çöp Kartı -->
        <div class="rounded-xl bg-gradient-to-br from-amber-500 to-orange-500 text-white p-6 shadow-lg">
            <div class="flex items-center justify-between">
                <div class="p-3 bg-white/20 rounded-lg">
                    <span class="material-symbols-outlined text-2xl">drafts</span>
                </div>
                <span class="text-xs font-semibold bg-white/20 px-2 py-1 rounded-full">%@draftRate</span>
            </div>
            <p class="text-sm opacity-90 mt-4">Taslak & Çöp Kutusu</p>
            <div class="flex items-baseline gap-4 mt-2">
                <div>
                    <h3 class="text-3xl font-bold">@Model.DraftCount</h3>
                    <p class="text-xs opacity-75">Taslak</p>
                </div>
                <div class="h-8 w-px bg-white/30"></div>
                <div>
                    <h3 class="text-3xl font-bold">@Model.TrashCount</h3>
                    <p class="text-xs opacity-75">Çöp Kutusu</p>
                </div>
            </div>
        </div>

        <!-- Hata Kartı -->
        <div class="rounded-xl bg-gradient-to-br from-rose-500 to-pink-500 text-white p-6 shadow-lg">
            <div class="flex items-center justify-between">
                <div class="p-3 bg-white/20 rounded-lg">
                    <span class="material-symbols-outlined text-2xl">error</span>
                </div>
                <span class="text-xs font-semibold bg-white/20 px-2 py-1 rounded-full">Son 24s</span>
            </div>
            <p class="text-sm opacity-90 mt-4">Sistem Hataları</p>
            <h3 class="text-3xl font-bold mt-1">@Model.ErrorCountLast24h</h3>
            <p class="text-xs opacity-75 mt-2">Elasticsearch üzerinden izleniyor</p>
        </div>
    </div>

    <!-- Grafik ve Kategori Alanı -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Mesaj Grafiği -->
        <div class="lg:col-span-2 bg-white rounded-xl border border-gray-200 shadow-sm p-6">
            <div class="flex items-center justify-between mb-6">
                <div>
                    <h4 class="text-lg font-bold text-gray-900">Mesaj İstatistikleri</h4>
                    <p class="text-sm text-gray-500 mt-1">Günlük mesaj aktivitesi ve performans trendleri</p>
                </div>
                <div class="flex gap-2">
                    <button class="px-3 py-1 text-sm font-medium rounded-lg bg-primary text-white" type="button">Günlük</button>
                    <button class="px-3 py-1 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100" type="button">Haftalık</button>
                    <button class="px-3 py-1 text-sm font-medium rounded-lg text-gray-600 hover:bg-gray-100" type="button">Aylık</button>
                </div>
            </div>

            <!-- Mini İstatistikler -->
            <div class="grid grid-cols-3 gap-4 mb-6">
                <div class="bg-gray-50 rounded-lg p-4">
                    <div class="flex items-center gap-2">
                        <span class="material-symbols-outlined text-primary">check_circle</span>
                        <span class="text-xs font-semibold text-gray-600">Okunma Oranı</span>
                    </div>
                    <p class="text-2xl font-bold text-gray-900 mt-2">%@readRate</p>
                </div>
                <div class="bg-gray-50 rounded-lg p-4">
                    <div class="flex items-center gap-2">
                        <span class="material-symbols-outlined text-emerald-500">notifications</span>
                        <span class="text-xs font-semibold text-gray-600">Bildirimler</span>
                    </div>
                    <p class="text-2xl font-bold text-gray-900 mt-2">@Model.NotificationCount</p>
                </div>
                <div class="bg-gray-50 rounded-lg p-4">
                    <div class="flex items-center gap-2">
                        <span class="material-symbols-outlined text-amber-500">category</span>
                        <span class="text-xs font-semibold text-gray-600">Kategoriler</span>
                    </div>
                    <p class="text-2xl font-bold text-gray-900 mt-2">@Model.CategoryCount</p>
                </div>
            </div>

            <!-- Grafik Alanı -->
            <div class="relative h-64 rounded-xl bg-gradient-to-r from-blue-50 to-indigo-50 border border-dashed border-gray-300">
                <div class="absolute inset-0 flex items-center justify-center">
                    <div class="text-center">
                        <span class="material-symbols-outlined text-4xl text-primary opacity-50">bar_chart</span>
                        <p class="text-sm font-semibold text-gray-700 mt-2">İnteraktif Grafik Alanı</p>
                        <p class="text-xs text-gray-500">Verilerinizi görselleştirmek için bir grafik kütüphanesi entegre edin</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Kategori Dağılımı -->
        <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
            <div class="flex items-center justify-between mb-6">
                <h4 class="text-lg font-bold text-gray-900">Kategori Dağılımı</h4>
                <span class="text-xs text-gray-400">En çok mesaj alan 6 kategori</span>
            </div>
            <div class="space-y-4">
                @foreach (var stat in Model.CategoryStats)
                {
                    var percentage = Model.MessageCount > 0 ? (int)Math.Round((double)stat.MessageCount / Model.MessageCount * 100) : 0;
                    <div class="space-y-2">
                        <div class="flex justify-between text-sm">
                            <span class="font-medium text-gray-900">@stat.CategoryName</span>
                            <span class="text-gray-600">@stat.MessageCount mesaj</span>
                        </div>
                        <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
                            <div class="h-full bg-gradient-to-r from-primary to-primary/70 rounded-full"
                                 style="width: @percentage%"></div>
                        </div>
                    </div>
                }
            </div>
            <div class="mt-6 pt-4 border-t border-gray-200">
                <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-600">Toplam Kategori:</span>
                    <span class="font-bold text-gray-900">@Model.CategoryCount</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Sistem Durumu ve Son Mesajlar -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Sistem Performansı -->
        <div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
            <div class="flex items-center justify-between mb-6">
                <h4 class="text-lg font-bold text-gray-900">Sistem Performansı</h4>
                <span class="px-3 py-1 rounded-full text-xs font-semibold bg-emerald-100 text-emerald-700">
                    <span class="inline-block w-2 h-2 rounded-full bg-emerald-500 mr-1"></span>
                    Sağlıklı
                </span>
            </div>

            <div class="space-y-5">
                <!-- Okunmamış Mesajlar -->
                <div>
                    <div class="flex justify-between text-sm mb-2">
                        <span class="text-gray-700">Okunmamış Mesajlar</span>
                        <span class="font-semibold text-gray-900">@Model.UnreadMessageCount</span>
                    </div>
                    <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
                        <div class="h-full bg-gradient-to-r from-rose-500 to-pink-500" style="width: @unreadRate%"></div>
                    </div>
                </div>

                <!-- Taslak Oranı -->
                <div>
                    <div class="flex justify-between text-sm mb-2">
                        <span class="text-gray-700">Taslak Oranı</span>
                        <span class="font-semibold text-gray-900">%@draftRate</span>
                    </div>
                    <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
                        <div class="h-full bg-gradient-to-r from-amber-500 to-orange-500" style="width: @draftRate%"></div>
                    </div>
                </div>

                <!-- Yorum Sayısı -->
                <div>
                    <div class="flex justify-between text-sm mb-2">
                        <span class="text-gray-700">Aktif Yorumlar</span>
                        <span class="font-semibold text-gray-900">@Model.CommentCount</span>
                    </div>
                    <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
                        <div class="h-full bg-gradient-to-r from-emerald-500 to-teal-500" style="width: @commentRate%"></div>
                    </div>
                </div>

                <!-- Çöp Kutusu -->
                <div>
                    <div class="flex justify-between text-sm mb-2">
                        <span class="text-gray-700">Çöp Kutusu</span>
                        <span class="font-semibold text-gray-900">@Model.TrashCount</span>
                    </div>
                    <div class="h-2 bg-gray-100 rounded-full overflow-hidden">
                        <div class="h-full bg-gradient-to-r from-gray-500 to-gray-700" style="width: @Math.Min(100, Model.TrashCount)%"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Son Mesajlar -->
        <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h4 class="text-lg font-bold text-gray-900">Son Mesajlar</h4>
                <p class="text-sm text-gray-500 mt-1">En son gelen 6 mesaj</p>
            </div>
            <div class="divide-y divide-gray-100">
                @foreach (var message in Model.RecentMessages)
                {
                    <div class="px-6 py-4 hover:bg-gray-50 transition-colors">
                        <div class="flex items-start justify-between">
                            <div class="flex-1">
                                <div class="flex items-center gap-2">
                                    <h5 class="font-semibold text-gray-900 text-sm">@message.Subject</h5>
                                    @if (!message.IsRead)
                                    {
                                        <span class="px-2 py-0.5 text-xs font-semibold bg-rose-100 text-rose-700 rounded-full">Yeni</span>
                                    }
                                </div>
                                <p class="text-sm text-gray-600 mt-1">@message.SenderEmail</p>
                                <div class="flex items-center gap-3 mt-2">
                                    <span class="px-2 py-0.5 text-xs bg-gray-100 text-gray-600 rounded">@message.CategoryName</span>
                                    <span class="text-xs text-gray-500">@message.SendDate.ToString("dd.MM.yyyy HH:mm")</span>
                                </div>
                            </div>
                            <button class="text-gray-400 hover:text-primary transition-colors">
                                <span class="material-symbols-outlined">more_vert</span>
                            </button>
                        </div>
                    </div>
                }
            </div>
            <div class="px-6 py-3 bg-gray-50 border-t border-gray-200">
                <a href="#" class="text-sm font-medium text-primary hover:text-primary/80 flex items-center justify-center gap-1">
                    Tüm Mesajları Görüntüle
                    <span class="material-symbols-outlined text-base">arrow_forward</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Hata Logları -->
    <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
        <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
            <div>
                <h4 class="text-lg font-bold text-gray-900">Sistem Logları</h4>
                <p class="text-sm text-gray-500">Son Elasticsearch hata kayıtları</p>
            </div>
            @if (!string.IsNullOrWhiteSpace(Model.KibanaUrl))
            {
                <a href="@Model.KibanaUrl" target="_blank"
                   class="px-4 py-2 text-sm font-medium text-white bg-gray-900 hover:bg-gray-800 rounded-lg flex items-center gap-2 transition-colors">
                    <span class="material-symbols-outlined text-base">open_in_new</span>
                    Tüm Logları Görüntüle
                </a>
            }
        </div>
        <div class="overflow-x-auto">
            <table class="w-full min-w-full">
                <thead class="bg-gray-50">
                    <tr>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Zaman</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Seviye</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Kullanıcı</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Mesaj</th>
                        <th class="px-6 py-3 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">İşlem</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                    @foreach (var log in Model.LatestElasticLogs.Take(5))
                    {
                        var statusClass = log.Level switch
                        {
                            "Error" or "Fatal" => "bg-rose-100 text-rose-700",
                            "Warning" => "bg-amber-100 text-amber-700",
                            "Info" => "bg-blue-100 text-blue-700",
                            _ => "bg-gray-100 text-gray-700"
                        };

                        <tr class="hover:bg-gray-50 transition-colors">
                            <td class="px-6 py-4 text-sm text-gray-900 whitespace-nowrap">
                                @log.Timestamp.ToString("dd.MM.yyyy HH:mm")
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-3 py-1 rounded-full text-xs font-semibold @statusClass">
                                    @log.Level
                                </span>
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-900">
                                @(log.UserEmail ?? log.SenderEmail ?? "Sistem")
                            </td>
                            <td class="px-6 py-4 text-sm text-gray-600 max-w-xs truncate">
                                @log.RenderedMessage?.Substring(0, Math.Min(50, log.RenderedMessage.Length))...
                            </td>
                            <td class="px-6 py-4">
                                <button class="text-gray-400 hover:text-primary transition-colors">
                                    <span class="material-symbols-outlined">visibility</span>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @if (Model.LatestElasticLogs.Count() > 5)
        {
            <div class="px-6 py-3 bg-gray-50 border-t border-gray-200 text-center">
                <button class="text-sm font-medium text-gray-600 hover:text-primary transition-colors">
                    + @(Model.LatestElasticLogs.Count() - 5) daha fazla log göster
                </button>
            </div>
        }
    </div>

    <!-- Footer -->
    <div class="text-center text-sm text-gray-500 py-4 border-t border-gray-200">
        <p>Son güncelleme: @DateTime.Now.ToString("dd.MM.yyyy HH:mm:ss")</p>
    </div>
</div>

<style>
    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24;
    }

    /* Gradient arka plan efektleri */
    .gradient-shadow {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    /* Hover efektleri */
    .hover-lift {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .hover-lift:hover {
            transform: translateY(-2px);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
        }
</style>